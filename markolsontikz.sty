\newcommand{\bifactor}[5]{
\begin{tikzpicture}
\draw[fill=\cnLightGreen] (0,0) rectangle (1,1);
\draw[fill=\cnLightRed] (1,0) rectangle (2,1);
% Summands of the Factors
\draw (0,0.5) node[left]{$#1$};
\draw (0.5,1) node[above]{$#2$};
\draw (1.5,1) node[above]{$#3$};
% First Summand of trinomial
\draw (0.5,0.5) node{$\cBlue{#4}$};
% Second Summand of trinomial
\draw (1.5,0.5) node{$\cRed{#5}$};
\end{tikzpicture}
}

\newcommand{\trifactor}[8]{
\begin{tikzpicture}
\draw[fill=\cnLightBlue] (0,1) rectangle (1,2);
\draw[fill=\cnLightGreen] (0,0) rectangle (1,1);
\draw[fill=\cnLightGreen] (1,1) rectangle (2,2);
\draw[fill=\cnLightRed] (1,0) rectangle (2,1);
% Summands of the Factors
\draw (0,1.5) node[left]{$#1$};
\draw (0,0.5) node[left]{$#2$};
\draw (0.5,2) node[above]{$#3$};
\draw (1.5,2) node[above]{$#4$};
% First Summand of trinomial
\draw (0.5,1.5) node{$\cBlue{#5}$};
% Second Summand of trinomial
\draw (0.5,0.5) node{$\cGreen{#6}$};
% Third Summand of trinomial
\draw (1.5,1.5) node{$\cGreen{#7}$};
% Fourth Summand of trinomial
\draw (1.5,0.5) node{$\cRed{#8}$};
\end{tikzpicture}
}

